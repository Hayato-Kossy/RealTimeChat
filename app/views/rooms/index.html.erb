<div class="container mt-5">
    <h1 class="text-center">Room List</h1>

    <div class="row mt-4">
        <% @rooms.each do |room| %>
        <div class="col-md-4">
            <div class="card mb-4">
            <div class="card-body">
                <h5 class="card-title"><%= room.name %></h5>
                <%= link_to 'Enter Room', room_path(room), class: 'btn btn-primary' %>
            </div>
            </div>
        </div>
        <% end %>
    </div>

    <div class="text-center">
        <%= link_to 'Create a new Room', new_room_path, class: 'btn btn-success' %>
    </div>
</div>
