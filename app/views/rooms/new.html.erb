<div class="container mt-5">
    <h1 class="text-center">Create a new Room</h1>

    <div class="row justify-content-center mt-4">
        <div class="col-md-6">
        <%= form_with(model: @room, local: true) do |form| %>
            <div class="form-group">
            <%= form.label :name %>
            <%= form.text_field :name, class: 'form-control', autofocus: true %>
            </div>

            <div class="form-group text-center">
            <%= form.submit 'Create Room', class: 'btn btn-primary' %>
            </div>
        <% end %>
        </div>
    </div>
</div>
